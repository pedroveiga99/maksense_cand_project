@inject IJSRuntime jsRuntime

<MudDialog>
    <DialogContent>
        <MudGrid>
            <MudItem xs="6">
                <MudCard Class="mud-height-full d-flex">
                    <MudCardContent>
                        <MudText Typo="Typo.h6">Info Pessoal</MudText>
                        <MudText Class="py-1">Nome: @SelectedProcess.Person.Name</MudText>
                        <MudText Class="py-1">Nº Utente: @SelectedProcess.Person.NumUtente</MudText>
                        <MudText Class="py-1">Data Nascimento: @SelectedProcess.Person.BirthDate.ToShortDateString()</MudText>
                    </MudCardContent>
                </MudCard>
            </MudItem>
            <MudItem xs="6">
                <MudCard Class="mud-height-full d-flex">
                    <MudCardContent>
                        <MudText Typo="Typo.h6">Exams</MudText>
                        @foreach (Exam e in SelectedProcess.Exams)
                        {
                            <MudText Class="py-1">@e.Id - @e.Name</MudText>
                        }
                    </MudCardContent>
                </MudCard>
            </MudItem>
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Hide">Close</MudButton>
    </DialogActions>
</MudDialog>


@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter] public Process SelectedProcess { get; set; }

    public void Hide() => MudDialog.Close();

}